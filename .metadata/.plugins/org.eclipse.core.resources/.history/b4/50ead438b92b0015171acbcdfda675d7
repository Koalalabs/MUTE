package org.de.koalalabs.mute;

import java.awt.Canvas;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Shape;
import java.awt.font.GlyphVector;

public class MuteCanvas extends Canvas {
	private static final long serialVersionUID = 1L;

	public MuteCanvas() {
		setBackground(Color.WHITE);
		setSize(1000, 1000);
	}

	private Shape s;

	public void paint(final Graphics g) {
		int width = getWidth();
		int height = getHeight();
		// super.paintComponent(g);

		Font f = getFont().deriveFont(Font.BOLD, 70);
		GlyphVector v = f.createGlyphVector(getFontMetrics(f)
				.getFontRenderContext(), "Hello");
		s = v.getOutline();
		setPreferredSize(new Dimension(300, 300));

		int xstart = 0;
		
		Graphics2D g2 = (Graphics2D)g.create();
        g2.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);
        g2.translate(100, 150);
        g2.rotate(0.4);
        g2.setPaint(Color.red);
        g2.fill(s);
    g2.setPaint(Color.black);
        g2.setStroke(new BasicStroke(3, BasicStroke.CAP_BUTT, BasicStroke.JOIN_ROUND, 1, new float[]{1,0.4f,1.5f}, 0));
        g2.draw(s);

//		for (int i = 1; i <= 50; i++) {
//			xstart = i * (width / 50);
//			g.drawLine(xstart, 0, xstart, height);
//		}
	}
}
